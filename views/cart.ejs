<%- include('./partials/header') %>
    <div class="w-full flex items-start px-20 py-5 gap-10">
        <!-- LEFT SIDE -->
        <div class="w-[30%] h-[82vh] overflow-y-auto px-2 relative border-2 border-grey rounded-lg">
            <h3 class="text-2xl text-center sticky bg-slate-100 py-2 mt- top-0 left-0 tracking-wider">Your Cart</h3>
            <div class="w-full flex flex-col gap-5 ">
                <% user.cart.forEach(product => { %>
                    <div class="w-full rounded-md overflow-hidden">
                        <div class="w-full h-80 flex justify-center items-center bg-[<%= product.bgcolor %>]">
                            <img class="h-[18rem]" src="data:image/jpeg;base64, <%= product.image.toString('base64') %>" alt="product image">
                        </div>
                        <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor %>]">
                            <h3 class="text-2xl"><%= product.name %></h3>
                            <div class="flex items-center gap-2">
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between px-5 py-3 bg-[<%= product.textcolor %>] text-white">
                            <h4 class="text-lg">Net Total</h4>
                            <h2 class="text-lg">₹ <%= product.price %></h2>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="w-[70%] h-full px-10">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= user.cart.reduce((acc, product) => { return acc + product.price }, 0) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= user.cart.reduce((acc, product) => { return acc + product.discount }, 0) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= user.cart.reduce((acc, product) => { return acc + product.price - product.discount }, 0) + 20 %></h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <%- include('./partials/footer') %>